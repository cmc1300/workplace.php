<script type="text/javascript">
function setActiveOne(active) {
	$( "li" ).removeClass( "active" );
	$( "#divVOIPUsage" ).hide();
	$( "#divPayment" ).hide();
	$( "#divAccountInfo" ).hide();
	if (active == 'VOIP Usage') {
		$( "#idVOIPUsage" ).addClass( "active" );
		$( "#divVOIPUsage" ).show();
		//console.log("Credit Card");
	}
	else if (active == 'Payment') {
		$( "#idPayment" ).addClass( "active" );
		$( "#divPayment" ).show();
		//console.log("Direct Debit");
	}
	else if (active == 'Account Info') {
		$( "#idAccountInfo" ).addClass( "active" );
		$( "#divAccountInfo" ).show();
		//console.log("Bpay");
	}
}
</script>

